<Window x:Class="KantorLr1.View.Windows.AutoGenerateData"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KantorLr1.View.Windows"
        xmlns:vm="clr-namespace:KantorLr1.ViewModels"
        mc:Ignorable="d"
        xmlns:commands="clr-namespace:KantorLr1.Infrastructure.Commands"
        Title="{Binding Path=Title}" Height="451" Width="476"
        DataContext="{Binding AutoGenerateDataViewModel, Source={StaticResource Locator}}">
    <Grid>
        <StackPanel>
            <GroupBox Header="Матрица">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,5">
                            <TextBlock TextWrapping="Wrap" Text="Число строк/столбцов"/>
                            <TextBox Width="50" Margin="5, 0"/>
                        </StackPanel>
                        <StackPanel Margin="0,5">
                            <TextBlock Text="Диапазон" HorizontalAlignment="Center" Margin="0,5"/>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="От"/>
                                    <TextBox Margin="5,0" Width="50" Text="{Binding MatrixMin, UpdateSourceTrigger=PropertyChanged}"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="До"/>
                                    <TextBox Margin="5,0" Width="50"/>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                        <Button Content="Сгенерировать" VerticalAlignment="Center" Margin="0,5" HorizontalAlignment="Center"/>
                    </StackPanel>
                    <GroupBox Header="Результат генерации" Grid.Column="1">
                        <TextBlock/>
                    </GroupBox>
                </Grid>
            </GroupBox>
            <GroupBox Header="Вектор">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,5" HorizontalAlignment="Center">
                            <TextBlock TextWrapping="Wrap" Text="Число элементов"/>
                            <TextBox Width="50" Margin="5, 0"/>
                        </StackPanel>
                        <StackPanel Margin="0,5">
                            <TextBlock Text="Диапазон" HorizontalAlignment="Center" Margin="0,5"/>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="От"/>
                                    <TextBox Margin="5,0" Width="50"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="До"/>
                                    <TextBox Margin="5,0" Width="50"/>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                        <Button Content="Сгенерировать" VerticalAlignment="Center" Margin="0,5" HorizontalAlignment="Center"/>
                    </StackPanel>
                    <GroupBox Header="Результат генерации" Grid.Column="1">
                        <TextBlock/>
                    </GroupBox>
                </Grid>
            </GroupBox>
            <GroupBox Header="Приближение">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,5" HorizontalAlignment="Center">
                            <TextBlock TextWrapping="Wrap" Text="Число элементов"/>
                            <TextBox Width="50" Margin="5, 0"/>
                        </StackPanel>
                        <StackPanel Margin="0,5">
                            <TextBlock Text="Диапазон" HorizontalAlignment="Center" Margin="0,5"/>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="От"/>
                                    <TextBox Margin="5,0" Width="50"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="До"/>
                                    <TextBox Margin="5,0" Width="50"/>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                        <Button Content="Сгенерировать" VerticalAlignment="Center" Margin="0,5" HorizontalAlignment="Center"/>
                    </StackPanel>
                    <GroupBox Header="Результат генерации" Grid.Column="1">
                        <TextBlock/>
                    </GroupBox>
                </Grid>
            </GroupBox>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,5">
                <Button Content="Принять" Width="100" IsDefault="True" 
                        Command="{Binding AcceptCommand}"
                        CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=local:AutoGenerateData}}">
                </Button>
                <Button Content="Отмена" Width="100" Margin="5,0" IsCancel="True"
                        CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=local:AutoGenerateData}}">
                    <Button.Command>
                        <commands:CloseWindowDialogCommand DialogResult="False"/>
                    </Button.Command>
                </Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
